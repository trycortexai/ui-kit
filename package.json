{
	"name": "ui-kit-monorepo",
	"scripts": {
		"build": "bun build:sdks && bun build:static",
		"build:sdks": "bunup",
		"build:static": "bun run --cwd static build",
		"dev:sdks": "bunup --watch",
		"dev:static": "bun run --cwd static dev",
		"dev:server": "bun run --cwd server dev",
		"test:dev": "bun build:sdks --env inline && bun dev:static",
		"test:chat": "IFRAME_SRC=http://localhost:5173 bun run test:dev & sleep 1 && bun --port 5173 static/dist/chat/index.html & sleep 1 && bun test/chat.html",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"type-check": "bun run --filter '*' type-check",
		"release": "bumpp -r --commit --push --tag",
		"postinstall": "bun simple-git-hooks"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@bunup/plugin-tailwindcss": "^0.14.20",
		"@types/bun": "^1.2.23",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.3",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	},
	"workspaces": [
		"static",
		"packages/*",
		"server"
	]
}
