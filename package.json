{
	"name": "ui-kit",
	"version": "0.1.0",
	"description": "The official cortex UI kit",
	"license": "MIT",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build:sdk && bun build:static",
		"build:sdk": "bunup",
		"build:static": "bun run --filter './static' build",
		"lint": "biome check .",
		"lint:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@bunup/plugin-tailwindcss": "^0.14.20",
		"@types/bun": "^1.2.23",
		"bunup": "^0.14.20",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"workspaces": [
		"static"
	]
}
